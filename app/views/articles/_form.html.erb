<%= form_for @article do |f| %>
	
  <%if @article.errors.any? %>
  <h3>Errors</h3>
  <ul>
	<% @article.errors.full_messages.each do |msg| %>
	<li> <%=msg %> </li>
  <% end %>
  </ul>
  <% else %>
   <div class="form-group">
	<%= f.label :category, "Category" %>
	<%= f.collection_select :category_id,Category.all, :id ,:name, {prompt: "select category"}, {class: "form-control"} %> <br/>
	</div>
	
	<div class="form-group">
	<%= f.label :title, "Title" %>
	<%= f.text_field :title, class: "form-control" %> <br/>
	</div>
	
	<div class="form-group">
	<%= f.label :body, "Body" %>
	<%= f.text_area :body, class: "form-control" %> <br/>
	</div>
	
	<div class="form-group">
	<%= f.label :publish_date, "Publish Date" %>
	<%= f.text_field :publish_date, class: "form-control" %> <br/>
	</div>
	
	
	<%= f.submit "Submit", class: "btn btn-info" %>

  <% end %>

<% end %>

<script>
$(document).ready(function(){
	$('#article_category_id').chosen();
});
</script>