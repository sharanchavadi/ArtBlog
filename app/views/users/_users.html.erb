<table class="table table-bordered table-striped" id="myTable">
  <thead>
    <tr>
      <th>Email</th>
      <th>Roles</th>
    </tr>
  </thead>

  <tbody>
    <% User.all.each do |user| %>
      <tr id="user_<%= user.id %>">
        <td><%= link_to user.email, user %></td>
        <td><%= user.roles.pluck(:name).join(", ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    $('#myTable').DataTable();
  });
</script>