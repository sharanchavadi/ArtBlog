<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <link rel="stylesheet" href="https://harvesthq.github.io/chosen/chosen.css">
  <link rel="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  <script src = "https://cdnjs.cloudflare.com/ajax/libs/chosen/1.7.0/chosen.jquery.min.js"> </script>

  <script src = "//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

<% if user_signed_in? %>
Welcome <%= current_user.email %> <%= link_to "Account setting", edit_user_registration_path %> | <%= link_to "Logout", destroy_user_session_path, method: :delete %>

<% else %>

<%= link_to "Login", new_user_session_path %> | <%= link_to "Sign up", new_user_registration_path %>
<% end %>
<br/>

<%= render "./layouts/navbar" %>
<%= link_to "comments", comments_path %> | <%= link_to "Roles", roles_path %>
<br/>

<%= notice %>
<%= alert %>

<%= yield %>
</div>
</body>
</html>
